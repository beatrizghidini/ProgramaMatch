salário = float(input("Digite o salário: "))
valor = float(input("Digite o valor do emprestimo: "))
anos = int(input("Quantos anos para pagar: "))
meses = anos * 12
prestacao = valor / meses
if prestacao > salário * 0.3:
    print("Infelizmente você não pode obter o empréstimo pois excede o valor da sua renda")
else:
    print(f"Valor da prestação mensal: R$ {prestacao:7.2f} Empréstimo OK")
